# 개발 환경 설정
NODE_ENV=development
PORT=3001
CLIENT_URL=http://localhost:3000
VITE_API_URL=http://localhost:3001

# 디버깅 설정
DEBUG=true
LOG_LEVEL=debug
VERBOSE_LOGGING=true

# 개발 도구 설정
GRAPHQL_PLAYGROUND=true
GRAPHQL_INTROSPECTION=true
SOURCE_MAP=true

# 빠른 재시작을 위한 설정
CACHE_TTL=60
ANALYSIS_TIMEOUT=60000

# 핫 리로드 설정
HOT_RELOAD=true
WATCH_FILES=true